@model Real_Time_Commenting.Models.BlogPost

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit BlogPost Details</h2>

<div class="card mt-lg-2 mb-lg-5 text-center p-5">
    <div class="row no-gutters  text-center">

        <div class="col-12">
            <div class="container">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal text-center">
                    <h4 class="text-center">Edit BlogPost Details</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.BlogPostID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <input type="submit" value="Save" class="btn btn-default" />
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                        
                    </div>
                </div>
                }

               
            </div>
</div>
        </div>
    </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
